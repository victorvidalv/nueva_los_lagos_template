---
// Importar componentes reutilizables con nombres más claros
import NavigationBar from '../components/site/navBar.astro';
import SiteBreadcrumbs from '../components/site/breadcrumbs.astro';
import SponsorSection from '../components/site/sponsors.astro';
import SiteFooter from '../components/site/footer.astro';
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{title}</title>
</head>
<body>
  <!-- Contenedor principal con fuente base -->
  <div class="font-body">
    <!-- Barra de navegación -->
    <NavigationBar />
    
    <!-- Migas de pan -->
    <SiteBreadcrumbs />

    <!-- Contenido dinámico -->
    <slot />

    <!-- Sección de patrocinadores -->
    <SponsorSection />
    
    <!-- Pie de página -->
    <SiteFooter />
  </div>
</body>
</html>
