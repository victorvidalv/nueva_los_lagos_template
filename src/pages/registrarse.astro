<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Formulario de Registro</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
    <div class="container mx-auto px-4 py-8">
        <div class="bg-white p-8 rounded-lg shadow-md">
            <h2 class="text-2xl font-bold mb-4">Crear cuenta</h2>

            <form id="registrationForm">
                <!-- Paso 1: Información personal -->
                <div id="step1" class="step-section mb-8">
                    <h3 class="text-lg font-medium mb-4">Información personal</h3>
                    <div class="mb-4">
                        <label for="fullName" class="block text-gray-700 font-medium mb-2">Nombre completo</label>
                        <input type="text" id="fullName" name="fullName" class="input-field" required>
                    </div>
                    <div class="mb-4">
                        <label for="email" class="block text-gray-700 font-medium mb-2">Correo electrónico</label>
                        <input type="email" id="email" name="email" class="input-field" required>
                    </div>
                </div>

                <!-- Paso 2: Detalles de la cuenta -->
                <div id="step2" class="step-section hidden mb-8">
                    <h3 class="text-lg font-medium mb-4">Detalles de la cuenta</h3>
                    <div class="mb-4">
                        <label for="username" class="block text-gray-700 font-medium mb-2">Nombre de usuario</label>
                        <input type="text" id="username" name="username" class="input-field" required>
                    </div>
                    <div class="mb-4">
                        <label for="password" class="block text-gray-700 font-medium mb-2">Contraseña</label>
                        <input type="password" id="password" name="password" class="input-field" required>
                    </div>
                </div>

                <!-- Barra de progreso -->
                <div class="mb-4">
                    <div class="w-full bg-gray-200 h-2 rounded-full">
                        <div id="progressBar" class="bg-blue-500 h-full rounded-full" style="width: 0%"></div>
                    </div>
                </div>

                <!-- Botón de acción -->
                <button type="button" onclick="nextStep()" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">Siguiente</button>
            </form>
        </div>
    </div>

    <script>
        let currentStep = 1;

        // Cambia al siguiente paso y actualiza la interfaz
        function nextStep() {
            if (currentStep <= 2) {
                toggleStepDisplay(currentStep, currentStep + 1);
                updateProgressBar(currentStep * 50);
                currentStep++;
            } else {
                alert('Formulario enviado');
                updateProgressBar(100);
            }
        }

        // Muestra u oculta los pasos según el número actual
        function toggleStepDisplay(hideStep, showStep) {
            document.getElementById(`step${hideStep}`).classList.add('hidden');
            document.getElementById(`step${showStep}`).classList.remove('hidden');
        }

        // Actualiza el ancho de la barra de progreso
        function updateProgressBar(percentage) {
            document.getElementById('progressBar').style.width = `${percentage}%`;
        }
    </script>

    <style>
        /* Estilos de los campos de entrada para simplificar */
        .input-field {
            border: 1px solid #cbd5e0;
            padding: 0.5rem 1rem;
            border-radius: 0.5rem;
            width: 100%;
            outline: none;
            transition: border-color 0.3s;
        }

        .input-field:focus {
            border-color: #3b82f6;
            box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.5);
        }

        .step-section {
            display: none;
        }

        .step-section:first-of-type {
            display: block;
        }
    </style>
</body>
</html>
