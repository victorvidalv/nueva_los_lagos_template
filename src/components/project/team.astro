---
const teamMembers = [
  { name: "Nombre 1 Apellido", role: "Cargo 1", image: "https://dummyimage.com/200x200/eeeeee/000000" },
  { name: "Nombre 2 Apellido", role: "Cargo 2", image: "https://dummyimage.com/200x200/eeeeee/000000" },
  { name: "Nombre 3 Apellido", role: "Cargo 3", image: "https://dummyimage.com/200x200/eeeeee/000000" },
  { name: "Nombre 4 Apellido", role: "Cargo 4", image: "https://dummyimage.com/200x200/eeeeee/000000" },
  { name: "Nombre 5 Apellido", role: "Cargo 5", image: "https://dummyimage.com/200x200/eeeeee/000000" },
  { name: "Nombre 6 Apellido", role: "Cargo 6", image: "https://dummyimage.com/200x200/eeeeee/000000" },
  { name: "Nombre 7 Apellido", role: "Cargo 7", image: "https://dummyimage.com/200x200/eeeeee/000000" },
  { name: "Nombre 8 Apellido", role: "Cargo 8", image: "https://dummyimage.com/200x200/eeeeee/000000" },
];
---

<section id="our-team" class="">
  
  <div class="container mx-auto px-4">

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
      {teamMembers.map((member) => (
        <div class="bg-white  p-6 my-6 text-center">
          <img src={member.image} alt={member.name} class="w-full rounded-full mb-4" />
          <h3 class="text-xl font-semibold mb-2">{member.name}</h3>
          <p class="text-gray-700">{member.role}</p>
        </div>
      ))}
    </div>
  </div>
</section>
